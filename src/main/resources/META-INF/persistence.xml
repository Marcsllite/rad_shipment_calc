<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="com.marcsllite.db">
        <description>
            Persistence unit for the Radiation Shipment Calculator project
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.marcsllite.model.db.A1Model</class>
        <class>com.marcsllite.model.db.A2Model</class>
        <class>com.marcsllite.model.db.DecayConstantModel</class>
        <class>com.marcsllite.model.db.ExemptConcentrationModel</class>
        <class>com.marcsllite.model.db.ExemptLimitModel</class>
        <class>com.marcsllite.model.db.HalfLifeModel</class>
        <class>com.marcsllite.model.db.IsotopeModel</class>
        <class>com.marcsllite.model.db.LimitsModel</class>
        <class>com.marcsllite.model.db.ReportableQuantityModel</class>
        <class>com.marcsllite.model.db.ShipmentsModel</class>
        <class>com.marcsllite.model.db.ValidNuclideModel</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:./db/ShipmentCalculatorDb" />
            <property name="jakarta.persistence.jdbc.user" value="admin" />
            <property name="jakarta.persistence.jdbc.password" value="root" />

            <!-- Database initialization settings -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.check_nullability" value="true"/>
            
            <property name="jakarta.persistence.schema-generation.create-source" value="script"/>
            <property name="jakarta.persistence.schema-generation.create-script-source" value="META-INF/create.sql"/>
    
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/data.sql"/>
    
            <property name="jakarta.persistence.schema-generation.drop-source" value="script"/>
            <property name="jakarta.persistence.schema-generation.drop-script-source" value="META-INF/drop.sql"/>

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />
        </properties>
    </persistence-unit>
</persistence>