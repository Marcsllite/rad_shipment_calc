<?xml version="1.0" encoding="UTF-8"?>

<?import com.marcsllite.model.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="referencePane" prefHeight="500.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/referencePane.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marcsllite.controller.ReferencePaneController">
  <HBox alignment="CENTER" spacing="5.0">
    <Label alignment="CENTER" text="Search" textAlignment="RIGHT" textFill="#8a8a8a" wrapText="true">
      <font>
        <Font name="System Bold" size="14.0" />
      </font>
    </Label>
    <TextField fx:id="txtFieldSearch" minWidth="250.0" promptText="Enter Isotope Name or Abbreviation" />
      <GridPane.margin>
         <Insets />
      </GridPane.margin>
  </HBox>
    <TableView fx:id="tableViewSearch" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <columns>
        <PTableColumn fx:id="tableColRefAbbr" editable="false" percentageWidth="0.5" styleClass="tableColumn" text="Abbreviation" />
        <PTableColumn fx:id="tableColRefName" editable="false" percentageWidth="0.5" styleClass="tableColumn" text="Full Name" />
      </columns>
      <GridPane.margin>
        <Insets left="15.0" right="15.0" />
      </GridPane.margin>
    </TableView>
 <HBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="2">
   <Label minWidth="30.0" text="A1:" textAlignment="CENTER">
     <font>
       <Font name="System Bold" size="14.0" />
     </font>
   </Label>
   <VBox alignment="CENTER" spacing="5.0">
     <TextField fx:id="txtFieldA1" alignment="CENTER" editable="false" minWidth="100.0" opacity="0.7" promptText="A1">
       <font>
         <Font size="15.0" />
       </font>
     </TextField>
     <HBox alignment="CENTER">
       <ComboBox fx:id="comboBoxRefA1Prefix" minWidth="100.0" visibleRowCount="5" />
       <ChoiceBox fx:id="choiceBoxRefA1RadUnit" />
     </HBox>
   </VBox>
   <Label minWidth="120.0" text="Exempt&#10;Concentration:&#10;(per gram)" wrapText="true">
     <font>
       <Font name="System Bold" size="14.0" />
     </font>
   </Label>
   <VBox alignment="CENTER" spacing="5.0">
     <TextField fx:id="txtFieldExemptCon" alignment="CENTER" editable="false" opacity="0.7" promptText="Exempt Concentration">
       <font>
         <Font size="15.0" />
       </font>
     </TextField>
     <HBox alignment="CENTER">
       <ComboBox fx:id="comboBoxRefExemptConPrefix" minWidth="100.0" visibleRowCount="5" />
       <ChoiceBox fx:id="choiceBoxRefExemptConRadUnit" />
     </HBox>
   </VBox>
      <GridPane.margin>
         <Insets left="5.0" right="5.0" />
      </GridPane.margin>
 </HBox>
 <Separator opacity="0.29" prefWidth="200.0" stylesheets="@../css/referencePane.css" visible="false" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
      <GridPane.margin>
         <Insets left="15.0" right="15.0" />
      </GridPane.margin>
   </Separator>
 <HBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="3">
   <Label minWidth="30.0" text="A2:" textAlignment="CENTER">
     <font>
       <Font name="System Bold" size="14.0" />
     </font>
   </Label>
   <VBox alignment="CENTER" spacing="5.0">
     <TextField fx:id="txtFieldA2" alignment="CENTER" editable="false" opacity="0.7" promptText="A2">
       <font>
         <Font size="15.0" />
       </font>
     </TextField>
     <HBox alignment="CENTER">
       <ComboBox fx:id="comboBoxRefA2Prefix" minWidth="100.0" visibleRowCount="5" />
       <ChoiceBox fx:id="choiceBoxRefA2RadUnit" />
     </HBox>
   </VBox>
   <Label minWidth="120.0" text="Exempt&#10;Limit:" wrapText="true">
     <font>
       <Font name="System Bold" size="14.0" />
     </font>
   </Label>
   <VBox alignment="CENTER" spacing="5.0">
     <TextField fx:id="txtFieldExemptLim" alignment="CENTER" editable="false" opacity="0.7" promptText="Exempt Limit">
       <font>
         <Font size="15.0" />
       </font>
     </TextField>
     <HBox alignment="CENTER">
       <ComboBox fx:id="comboBoxRefExemptLimPrefix" minWidth="100.0" visibleRowCount="5" />
       <ChoiceBox fx:id="choiceBoxRefExemptLimRadUnit" />
     </HBox>
   </VBox>
      <GridPane.margin>
         <Insets left="5.0" right="5.0" />
      </GridPane.margin>
 </HBox>
 <Separator opacity="0.29" prefWidth="200.0" stylesheets="@../css/referencePane.css" visible="false" GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
      <GridPane.margin>
         <Insets left="15.0" right="15.0" />
      </GridPane.margin>
   </Separator>
 <HBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="4">
   <Label minWidth="80.0" text="Decay&#10;Constant:" wrapText="true">
     <font>
       <Font name="System Bold" size="14.0" />
     </font>
   </Label>
   <TextField fx:id="txtFieldDecayConst" alignment="CENTER" editable="false" opacity="0.7" prefWidth="150.0" promptText="Decay Constant">
     <font>
       <Font size="15.0" />
     </font>
   </TextField>
   <Label minWidth="120.0" text="Half Life:&#10;(days)">
     <font>
       <Font name="System Bold" size="14.0" />
     </font>
   </Label>
   <TextField fx:id="txtFieldHalfLife" alignment="CENTER" editable="false" opacity="0.7" promptText="Half Life">
     <font>
       <Font size="15.0" />
     </font>
   </TextField>
      <GridPane.margin>
         <Insets left="5.0" right="5.0" />
      </GridPane.margin>
 </HBox>
 <Separator opacity="0.29" prefWidth="200.0" stylesheets="@../css/referencePane.css" visible="false" GridPane.rowIndex="4" GridPane.valignment="BOTTOM">
      <GridPane.margin>
         <Insets left="15.0" right="15.0" />
      </GridPane.margin>
   </Separator>
 <HBox alignment="CENTER" spacing="5.0" GridPane.rowIndex="5">
     <Label text="Reportable&#10;Quantity:" wrapText="true">
         <font>
             <Font name="System Bold" size="14.0" />
         </font>
     </Label>
     <VBox alignment="CENTER" spacing="5.0">
         <TextField fx:id="txtFieldReportQuan" alignment="CENTER" editable="false" opacity="0.7" promptText="Reportable Quantity">
             <font>
                 <Font size="15.0" />
             </font>
       </TextField>
         <HBox alignment="CENTER">
             <ComboBox fx:id="comboBoxRefReportQuanPrefix" minWidth="100.0" visibleRowCount="5" />
             <ChoiceBox fx:id="choiceBoxRefReportQuanRadUnit" />
         </HBox>
     </VBox>
      <GridPane.margin>
         <Insets />
      </GridPane.margin>
 </HBox>
    <columnConstraints>
      <ColumnConstraints percentWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints percentHeight="10.0" />
      <RowConstraints percentHeight="44.0" />
      <RowConstraints percentHeight="12.0" />
      <RowConstraints percentHeight="12.0" />
